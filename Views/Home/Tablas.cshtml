@{
    ViewData["Title"] = "Tablas";
    int count1 = 1;
}
<button class="d-none" id="btn-imgusuario"
    onclick="MostrarFotoUsuario('@ViewBag.Usuario.Foto', '@ViewBag.Usuario.Nombre', '@ViewBag.Usuario.idUsuario')"></button>

<div class="text-center">
    <div class="row">
        <div class="d-flex justify-content-center">

            <div class="col-5">
                <h2>Tabla</h2>
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col-1" class="th-tablas">#</th>
                            <th scope="col-1" class="th-tablas">Nombre</th>
                            <th scope="col-1" class="th-tablas">PTS</th>
                            <th scope="col-1" class="th-tablas">Detalles</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Equipo item in ViewBag.ListaEquipos)
                        {
                            <tr class="table-center">
                                <th scope="row" class="th-tablas">@count1</th>
                                <td class="th-tablas">@item.Nombre</td>
                                <td class="th-tablas">@item.Pts</td>
                                <td class="th-tablas"><button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#modalEquipo" onclick="DetalleEquipo(@item.IdEquipo)"><i class="bi bi-info-circle"></i></button></td>
                            </tr>
                            count1++;
                        }
                    </tbody>
                </table>
            </div>
            <div class="col-1"></div>
            <div class="col-5">
                <h2>Goleadores</h2>
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col" class="th-tablas">#</th>
                            <th scope="col" class="th-tablas">Jugador</th>
                            <th scope="col" class="th-tablas">Goles</th>
                            <th scope="col" class="th-tablas">Detalles</th>
                        </tr>
                    </thead>
                    <tbody>

                        @{count1 = 1;}
                        @foreach (Jugador item in ViewBag.Goleadores)
                        {
                            <tr class="table-center">
                                <th scope="row" class="th-tablas">@count1</th>
                                <td class="th-tablas">@item.NombreApellido</td>
                                <td class="th-tablas">@item.Goles</td>
                                <td class="th-tablas"><button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#modalJugador" onclick="DetalleJugador(@item.IdJugador)"><i class="bi bi-info-circle"></i></button></td>
                            </tr>
                            count1++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



</div>



<!-- Modal -->
<div class="modal fade" id="modalEquipo" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="modal-title-equipo">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="modal-body-equipo">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalJugador" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="modal-title-jugador">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="modal-body-jugador">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>