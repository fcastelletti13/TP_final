@{
    ViewData["Title"] = "Home Page";
    int count1 = 1;
}
<button class="d-none" id="btn-imgusuario" onclick="MostrarFotoUsuario('@ViewBag.Usuario.Foto', '@ViewBag.Usuario.Nombre')"></button>

<div class="text-center">
    <div class="row">
        <div class="col-5">
            <h2>Tabla</h2>
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col-1" class="th-tablas">#</th>
                        <th scope="col-1" class="th-tablas">Nombre</th>
                        <th scope="col-1" class="th-tablas">PJ</th>
                        <th scope="col-1" class="th-tablas">DG</th>
                        <th scope="col-1" class="th-tablas">PTS</th>

                    </tr>
                </thead>
                <tbody>
            @foreach (Equipo item in ViewBag.ListaEquipos)
            {
                <tr>
                    <th scope="row" class="th-tablas">@count1</th>
                    <td class="th-tablas">@item.Nombre</td>
                    <td class="th-tablas">@item.PJ</td>
                    <td class="th-tablas">@item.DG</td>
                    <td class="th-tablas">@item.Pts</td>
                </tr>
                count1++;
            }
                </tbody>
            </table>
        </div>
    
    <div class="col-5">
        <h2>Goleadores</h2>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col" class="th-tablas">#</th>
                    <th scope="col" class="th-tablas">Jugador</th>
                    <th scope="col" class="th-tablas">Goles</th>
                </tr>
            </thead>
            <tbody>
                  @foreach (Jugador item in ViewBag.Goleadores)
            {
                <tr>
                    <th scope="row" class="th-tablas">@count1</th>
                    <td class="th-tablas">@item.NombreApellido</td>
                    <td class="th-tablas">@item.Goles</td>
                </tr>
                count1++;
            }
            </tbody>
        </table>
    </div>
</div>
</div>



</div>
